<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/imie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="101dp"
                android:layout_marginTop="120dp"
                android:layout_marginEnd="100dp"
                android:ems="10"
                android:hint="@string/dodaj_kontakt_imie"
                android:importantForAutofill="no"
                android:inputType="text|textPersonName"
                android:minHeight="48dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAutofill="no"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/nazwisko"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginStart="101dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="100dp"
                android:ems="10"
                android:hint="@string/dodaj_kontakt_nazwisko"
                android:inputType="text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAutofill="no"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/telefon"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginStart="101dp"
                android:layout_marginEnd="100dp"
                android:ems="10"
                android:hint="@string/dodaj_kontakt_telefon"
                android:inputType="number"
                android:numeric="integer"
                android:phoneNumber="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginStart="101dp"
                android:layout_marginEnd="100dp"
                android:autofillHints=""
                android:ems="10"
                android:hint="@string/dodaj_kontakt_e_mail"
                android:inputType="textEmailAddress" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/miasto"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginStart="101dp"
                android:layout_marginEnd="100dp"
                android:autofillHints=""
                android:ems="10"
                android:hint="Miasto"
                 />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/ulica"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginStart="101dp"
                android:layout_marginEnd="100dp"
                android:autofillHints=""
                android:ems="10"
                android:hint="Ulica"
                 />
        </LinearLayout>

        <CheckBox
            android:id="@+id/praca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="135dp"
            android:layout_marginEnd="100dp"
            android:text="Kontakt z Pracy?"
            android:textAlignment="center" />

        <Button
            android:id="@+id/dodajkontakt"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="140dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="161dp"
            android:layout_marginBottom="117dp"
            android:text="@string/dodaj_kontakt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/telefon" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>